<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="style.css" />
</head>

<body>
  <div class="row">
    <%- include('./partials/sidebar.ejs') %>
      <div class="col rm-padding">
        <%- include('./partials/navbar.ejs') %>
          <div class="row">
            <div class="sidebar-collapse px-0">
              <h6 class="px-4 sidebar-collapse-menu text-secondary fw-bold">CARS</h6>
              <h6 class="px-4 sidebar-collapse-item d-flex align-items-center fw-bold">
                List Car
              </h6>
            </div>
            <div class="col">
              <div class="container">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-dark text-decoration-none fw-bold">Cars</a></li>
                    <li class="breadcrumb-item"><a href="#" class="text-dark text-decoration-none fw-bold">List Car</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Add New Car
                    </li>
                  </ol>
                </nav>
                <div class="row">
                  <div class="col">
                    <h5 class="pt-3 fw-bold">Add New Car</h5>
                  </div>
                </div>
                <form action="/car" method="post" enctype="multipart/form-data">
                  <div class="card">
                    <div class="card-body">
                      <div class="row g-3 align-items-center mt-2">
                        <div class="col-auto">
                          <label for="inputNama" class="col-form-label" style="width: 147px">Nama</label>
                        </div>
                        <div class="col-auto">
                          <input type="text" id="iNama" name="inputNama" class="form-control" style="width: 339px" />
                        </div>
                      </div>
                      <div class="row g-3 align-items-center mt-2">
                        <div class="col-auto">
                          <label for="inputSewa" class="col-form-label" style="width: 147px">Sewa Perhari</label>
                        </div>
                        <div class="col-auto">
                          <input type="text" id="inputSewa" name="inputSewa" class="form-control"
                            style="width: 339px" />
                        </div>
                      </div>
                      <div class="row g-3 align-items-center mt-2">
                        <div class="col-auto">
                          <label for="inputUkuran" class="col-form-label" style="width: 147px">Ukuran</label>
                        </div>
                        <div class="col-auto">
                          <select id="inputUkuran" name="inputUkuran" class="form-select" style="width: 339px">
                            <option value="small">Small</option>
                            <option value="medium">Medium</option>
                            <option value="large">Large</option>
                          </select>
                        </div>
                      </div>
                      <div class="row g-3 align-items-center mt-2">
                        <div class="col-auto">
                          <label for="inputFoto" class="col-form-label" style="width: 147px">Foto</label>
                        </div>
                        <div class="col-auto">
                          <input type="file" id="inputFoto" name="inputFoto" class="form-control"
                            style="width: 339px" />
                            <small class="text-secondary">File size max 2MB</small>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row my-2" style="margin-top: 189px !important">
                    <div class="col">
                      <button type="reset" class="btn btn-outline-primary me-2">
                        Cancel</button><button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
      </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>